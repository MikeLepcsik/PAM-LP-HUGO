[
    {{ range $index, $value := where .Site.Pages "Type" "karriere" }}
    {{ if $index }}, {{ end }}
    {
        "url": "{{ .RelPermalink }}",
        "title": "{{ .Title }}",
        "tags": "{{ range .Params.tags }} {{ . }} {{ end }}",        
        "categoriesStudent": "{{ range .Params.categoriesStudent }} {{ . }} {{ end }}",
        "categoriesSchueler": "{{ range .Params.categoriesSchueler }} {{ . }} {{ end }}",
        "categoriesBerufserfahrene": "{{ range .Params.categoriesBerufserfahrene }} {{ . }} {{ end }}",
        "content": {{ (print .Params.Job.TextLine1 " " .Params.Job.TextLine2 " " .Params.Job.TextLine3) | plainify | jsonify }}
    }
    {{ end }}
]